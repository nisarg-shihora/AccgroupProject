      relief = GROOVE,
      font = ("verdana", "10"),
      bg = "#FFFFFF",
      fg = "#000000"
      )
   # placing the entry field on the window
   rename_field.pack(pady = 4, padx = 4)

   # creating a button
   submitButton = Button(
      rename_window,
      text = "Submit",
      command = submitName,
      width = 12,
      relief = GROOVE,
